# Maintainer: Vineel Sai <mail@vineelsai.com>
pkgname='checkout'
pkgver=r17.18c349e
pkgrel=1
epoch=
pkgdesc="A simple CLI tool to Checkout code I store in different folders to a folder I edit them in"
arch=("x86_64" "aarch64")
url="https://vineelsai.com"
license=('MIT')
groups=()
depends=()
makedepends=('git' 'go')
checkdepends=()
optdepends=()
provides=(checkout)
conflicts=()
replaces=()
backup=()
options=()
changelog=
source=("git+https://github.com/vineelsai26/$pkgname.git")
noextract=()
md5sums=('SKIP')
validpgpkeys=()

pkgver() {
    cd "$pkgname"
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short=7 HEAD)"
}

build() {
    cd "$pkgname"
    go build
}

package() {
	cd "$pkgname"
    install -Dm755 "$pkgname" "${pkgdir}/usr/bin/${pkgname}"
}
